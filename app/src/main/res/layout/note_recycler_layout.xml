<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/back_ground_color">

    <androidx.cardview.widget.CardView
        android:background="#F7F7F7"
        android:id="@+id/cardView"
        android:layout_margin="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:background="@color/black"
                android:id="@+id/priorityView1"
                android:layout_width="5dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:background="@color/white"
                android:id="@+id/priorityView2"
                android:layout_width="5dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/recycler_layout_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10mdp"
                android:layout_marginTop="@dimen/_5mdp"
                android:layout_marginEnd="@dimen/_10mdp"
                android:ellipsize="end"
                android:fontFamily="@font/calistoga"
                android:letterSpacing="0.06"
                android:lines="1"
                android:paddingStart="@dimen/_5mdp"
                android:paddingEnd="@dimen/_5mdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15mdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="No Title" />

<!--            <View-->
<!--                android:id="@+id/view3"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="2dp"-->
<!--                android:layout_marginStart="@dimen/_10mdp"-->
<!--                android:layout_marginEnd="@dimen/_10mdp"-->
<!--                android:background="@drawable/drawer_view_shape"-->
<!--                app:layout_constraintBottom_toTopOf="@id/recycler_layout_body"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toBottomOf="@id/recycler_layout_title" />-->


            <TextView
                android:paddingStart="@dimen/_5mdp"
                android:paddingEnd="@dimen/_5mdp"
                app:layout_constraintEnd_toEndOf="parent"
                android:ellipsize="end"
                android:maxLines="2"
                android:id="@+id/recycler_layout_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10mdp"
                android:layout_marginEnd="@dimen/_10mdp"
                android:fontFamily="@font/calistoga"
                android:letterSpacing="0.06"
                android:textColor="@color/black"
                android:textSize="@dimen/_12mdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recycler_layout_title"
                android:text="No Description"/>


            <TextView
                app:layout_constraintEnd_toStartOf="@id/recycler_layout_menu"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/capriola"
                android:id="@+id/recycler_layout_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10mdp"
                android:layout_marginTop="@dimen/_5mdp"
                android:layout_marginEnd="@dimen/_10mdp"
                android:layout_marginBottom="@dimen/_10mdp"
                android:letterSpacing="0.06"
                android:paddingStart="@dimen/_5mdp"
                android:paddingEnd="@dimen/_5mdp"
                android:text="2021/10/3"
                android:textColor="@color/black"
                android:textSize="@dimen/_10mdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recycler_layout_desc" />


            <ImageView
                android:id="@+id/recycler_layout_menu"
                android:layout_width="@dimen/_22mdp"
                android:layout_height="@dimen/_22mdp"
                android:layout_marginEnd="@dimen/_15mdp"
                android:src="@drawable/ic_baseline_more_vert_24"
                app:layout_constraintBottom_toBottomOf="@id/recycler_layout_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/recycler_layout_date" />


<!--            <ImageView-->
<!--                android:id="@+id/recycler_layout_edit"-->
<!--                android:layout_width="@dimen/_22mdp"-->
<!--                android:layout_height="@dimen/_22mdp"-->
<!--                android:src="@drawable/ic_baseline_edit_24"-->
<!--                app:layout_constraintBottom_toBottomOf="@id/recycler_layout_date"-->
<!--                app:layout_constraintTop_toTopOf="@id/recycler_layout_date"-->
<!--                app:layout_constraintEnd_toStartOf="@id/recycler_layout_delete"-->
<!--                android:layout_marginEnd="@dimen/_15mdp"/>-->


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>